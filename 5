#include <stdio.h>
#include <string.h>

#define MAX_SIZE 100

int main()
{
    char str[MAX_SIZE];
    int i, len;
    int freq[256] = {0};  // Array to store frequency of each character
    char maxChar;         // Variable to store character with maximum frequency
 
    printf("Enter any string: ");
    gets(str);
 
    len = strlen(str);
 
    // Count frequency of each character in the string
    for(i=0; i<len; i++)
    {
        freq[str[i]]++;
    }
 
    // Find character with maximum frequency
    int maxFreq = 0;
    for(i=0; i<len; i++)
    {
        if(freq[str[i]] > maxFreq)
        {
            maxFreq = freq[str[i]];
            maxChar = str[i];
        }
    }
 
    printf("Maximum occurring character = '%c' with frequency = %d.", maxChar, maxFreq);
 
    return 0;
}
Enter a string: hello world
The maximum occurring character is 'l' with frequency 3
